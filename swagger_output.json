{
  "swagger": "2.0",
  "info": {
    "title": "REST API",
    "description": "REST API with Express and Firestore",
    "version": "1.0.0"
  },
  "host": "restapi-cizn.onrender.com",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "paths": {
    "/items": {
      "post": {
        "tags": [
          "Items"
        ],
        "summary": "Create an item",
        "description": "Create an item",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "data",
            "in": "body",
            "description": "Data to create an item",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item successfully created"
          },
          "400": {
            "description": "Bad request"
          },
          "408": {
            "description": "Request Timeout"
          }
        }
      },
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Get all items entries",
        "description": "Get all items entries",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Items entries successfully obtained"
          },
          "400": {
            "description": "Bad request"
          },
          "408": {
            "description": "Request Timeout"
          }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Get an item entry",
        "description": "Get an item entry",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Item id"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Get an item by id"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Item not found"
          },
          "408": {
            "description": "Request Timeout"
          }
        }
      },
      "delete": {
        "tags": [
          "Items"
        ],
        "summary": "Delete an item",
        "description": "Delete an item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Item id"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Item successfully deleted"
          },
          "400": {
            "description": "Bad request"
          },
          "408": {
            "description": "Request Timeout"
          }
        }
      },
      "put": {
        "tags": [
          "Items"
        ],
        "summary": "Update an item",
        "description": "Update an item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Item id"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "data",
            "in": "body",
            "description": "Data to update an item",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Item successfully updated"
          },
          "400": {
            "description": "Bad request"
          },
          "408": {
            "description": "Request Timeout"
          }
        }
      }
    }
  }
}